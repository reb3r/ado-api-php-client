<?xml version="1.0"?>
<ruleset name="ADO API PHP Client">
    <description>Coding Standard for ADO API PHP Client</description>

    <!-- Show progress -->
    <arg value="p"/>

    <!-- Show sniff codes in all reports -->
    <arg value="s"/>

    <!-- Use colors in output -->
    <arg name="colors"/>

    <!-- Files to check -->
    <file>src</file>
    <file>tests</file>

    <!-- Use PSR-12 as base standard -->
    <rule ref="PSR12">
        <!-- Allow longer lines for readability -->
        <exclude name="Generic.Files.LineLength"/>
    </rule>

    <!-- Enforce strict types declaration -->
    <rule ref="Generic.PHP.RequireStrictTypes"/>

    <!-- Exclude vendor directory -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/build/*</exclude-pattern>
</ruleset>
